{
  "name": "@pbuk/rec-math",
  "version": "0.1.0-dev",
  "description": "Recreational mathemetics including games and puzzle solvers",
  "keywords": [
    "recreational",
    "mathematics",
    "math",
    "game",
    "puzzle",
    "solver"
  ],
  "homepage": "https://github.com/pbuk-uk/rec-math-js",
  "bugs": "https://github.com/pbuk-uk/rec-math-js/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:pbuk-uk/rec-math-js.git"
  },
  "author": "pbuk (http://github.com/pbuk-uk)",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/rec-math.min.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run lint:fix && npm run test:unit",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "test:ci-report": "nyc --include=src npm run test:unit",
    "test:report": "rimraf coverage && nyc --include=src npm run test:unit && nyc report --reporter=html --reporter=text-summary",
    "test:unit": "mocha -r ts-node/register ./**/*.{spec,test}.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "chai": "^4.3.4",
    "eslint": "^8.1.0",
    "eslint-plugin-mocha": "^9.0.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
