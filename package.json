{
  "name": "@pbuk/rec-math",
  "version": "0.0.1",
  "description": "Recreational mathemetics including games and puzzle solvers",
  "keywords": [
    "recreational",
    "mathematics",
    "math",
    "game",
    "puzzle",
    "solver"
  ],
  "homepage": "https://github.com/pbuk-uk/rec-math-js",
  "bugs": "https://github.com/pbuk-uk/rec-math-js/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:pbuk-uk/rec-math-js.git"
  },
  "author": "pbuk (http://github.com/pbuk-uk)",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/rec-math.min.js",
  "scripts": {
    "build": "npm run lint:fix && npm run build:build",
    "build:build": "rollup -c",
    "ci": "npm run lint && npm run build:build && npm run test:ci",
    "lint": "eslint . && prettier . --check",
    "lint:fix": "eslint . --fix && prettier . --write",
    "publish": "npm run build && npm run test && npm publish --access=public",
    "test": "jest test --verbose",
    "test:ci": "npm run test",
    "test:coverage": "jest test/unit --coverage",
    "test:func": "jest test/functional --verbose",
    "test:unit": "jest test/unit --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.2.0",
    "prettier": "^2.4.0",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^1.14.1",
    "typescript": "^4.4.3"
  }
}
